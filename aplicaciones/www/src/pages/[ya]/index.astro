---
import Plantilla from '@/plantillas/Principal.astro';
import datos from '@/datosVisibles/indicadores';
import type { GetStaticPaths } from 'astro';

export const getStaticPaths = (() => {
  return datos.map((ya) => {
    return { params: { ya: ya.ruta } };
  });
}) satisfies GetStaticPaths;

const { ya } = Astro.params;
const datosYa = datos.find((instancia) => instancia.ruta === ya);
const rutaPrimerIndicador = `${datosYa.ruta}/${datosYa.indicadores[0].ruta}`;
---

<Plantilla titulo={datosYa.nombre} conMenu={true} apuntarA={rutaPrimerIndicador} />
