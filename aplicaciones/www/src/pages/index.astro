    margin: 1em 0 0 0;
    text-align: center;
  }

  h2 {
    font-size: 2em;
    width: 100%;
    text-align: center;
  }

  h3 {
    font-size: 1.3em;
    font-variation-settings:
      'MONO' 0,
      'CASL' 0,
      'wght' 800,
      'slnt' 0,
      'CRSV' 0;
  }
  h4 {
    margin-top: 2em;
  }

  li {
    padding-bottom: 1em;
  }

  .inicio {
    background-color: var(--moradoProfundo);
    color: var(--blancoMarfil);
    padding-bottom: 20vh;
    line-height: 1.4;

    font-variation-settings:
      'MONO' 0,
      'CASL' 0,
      'wght' 1000,
      'slnt' 0,
      'CRSV' 0;

    .texto {
      padding: 0 8em 0 9em;
      text-align: left;
      font-variation-settings:
        'MONO' 0,
        'CASL' 0,
        'wght' 433,
        'slnt' 0,
        'CRSV' 0;
    }
  }

  section {
    width: 62%;
  }

  img {
    position: fixed;
    top: 8em;
    right: 10%;
    width: 17%;
    height: 70%;
  }
</style>
